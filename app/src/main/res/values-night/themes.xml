<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GifApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryDarkColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/primaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
    </style>

<!-- TabLayout Theme -->
    <style name="Theme.GifApp.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primaryDarkColor</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/Theme.GifApp.TabLayout.TextAppearance</item>
        <item name="tabSelectedTextColor">@color/primaryDarkColor</item>
    </style>

    <!-- PopupMenu Theme -->
    <style name="Theme.GifApp.PopupMenu" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="popupMenuBackground">@color/primaryColor</item>
    </style>

    <!-- Pregerences Theme -->
    <style name="Theme.GifApp.Preferences" parent="Theme.AppCompat">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>

    <!-- TabLayout TextAppearance -->
    <style name="Theme.GifApp.TabLayout.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- No ActionBar Theme -->
    <style name="Theme.GifApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>